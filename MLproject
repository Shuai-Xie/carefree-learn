name: carefree-learn

conda_env: conda.yml

entry_points:
  main:
    parameters:
      model: {type: str, default: "fcnn"}
      config: {type: str, default: ""}
      root_dir: {type: path, default: "./"}
      train_file: {type: str}
      valid_file: {type: str, default: ""}

    command: |
      python cli/main.py \
        --model {model} \
        --config {config} \
        --root_dir {root_dir} \
        --train_file {train_file} \
        --valid_file {valid_file}

  ds:
    parameters:
      cuda: { type: str }
      ds_config: { type: path }
      model: { type: str, default: "fcnn" }
      config: { type: str, default: "" }
      root_dir: { type: path, default: "./" }
      train_file: { type: str }
      valid_file: { type: str, default: "" }

    command: |
      deepspeed \
        --include="localhost:{cuda}" \
        cli/main.py \
        --model {model} \
        --config {config} \
        --root_dir {root_dir} \
        --train_file {train_file} \
        --valid_file {valid_file} \
        --deepspeed_config {ds_config} \

  inference:
    parameters:
      host: { type: str, default: "127.0.0.1" }
      port: { type: str, default: "5000" }
      adapter: { type: str, default: "http" }
      config: { type: str, default: "" }
      test_file: { type: path }
      export_file: { type: path }

    command: |
      python cli/inference.py \
        --host {host} \
        --port {port} \
        --adapter {adapter} \
        --config {config} \
        --test_file {test_file} \
        --export_file {export_file}

  test:
    command: |
      pytest -v --cov